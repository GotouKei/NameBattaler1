<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ExtraText,UselessParent"
        tools:layout_editor_absoluteX="194dp">

        <Button
            android:id="@+id/Modoru1"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:onClick="modoru1"
            android:text="@string/modoru1" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="566dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp" />

    </LinearLayout>

    <Button
        android:id="@+id/kyarasakusei1"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:onClick="kyara_sakusei1"
        android:text="@string/kyara_sakusei"
        android:background="@drawable/all_kyaracter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.951" />

</androidx.constraintlayout.widget.ConstraintLayout>
